<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
    <h4> Email Used: <%= @order.email %> </h4>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="1">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
      <% new_cart = @order.line_items %>
      <% new_cart.each do |value| %>
      <%= render 'item', product: value[:product_id], quantity: value[:quantity], price: value[:item_price_cents]  %>
      <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3">
            TOTAL:
          </th>
          <th>
            <%= humanized_money_with_symbol @order.total_cents/100.0  %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>
  </div>

  <div>
  <h4>Order Total: <%= humanized_money_with_symbol @order.total_cents/100.0 %><h4>
  </div>




  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
